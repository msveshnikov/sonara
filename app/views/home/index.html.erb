<!-- When submit the form, the view rendered will be the index view of our articles resource -->
<%= form_tag(words_path, :method => "get", id: "search-form") do %>
    <div class="input-append">
      Введите слово:
      <br>
      <%= text_field_tag :search, params[:search], class: "span3", placeholder: "Что приснилось" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
<% end %>
<br>
<% (("а".."я").to_a-("ъ".."ь").to_a).each do |letter| %>
    <%= link_to(letter.mb_chars.upcase, words_path(letter: letter), class: "letter") %>
<% end %>
<% if current_user %>
    <h1> История снов </h1>
    <% @dreams.each do |date| %>
        <h3>    <%= date[0] %> </h3>
        <% date[1].uniq_by(&:word_id).sort_by { |dream| dream.word.name }.each do |dream| %>
            <div>
              <%= link_to dream.word.name, dream.word, class: "words" %>
            </div>
        <% end
           end %>
<% end %>