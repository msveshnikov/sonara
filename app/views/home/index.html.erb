<h1>СОННИК</h1>

<!-- When submit the form, the view rendered will be the index view of our articles resource -->
<%= form_tag(words_path, :method => "get", id: "search-form") do %>
    <div class="input-append">
      Введите слово:
      <br>
      <%= text_field_tag :search, params[:search], class: "offset2 span2", placeholder: "Что приснилось" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>

    <br>
    <% @first_letters.each do |letter| %>
        <%= link_to(letter, words_path(letter: letter)) %>
    <% end %>
<% end %>